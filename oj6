#include<stdio.h>
#include<math.h>
#include<algorithm>
#pragma warning(disable:4996)
int main()
{
	long long int m, k, h;
	int i, j;
	long long int height[100000];
	long long int sum = 0;
	scanf("%lld %lld %lld", &m, &k, &h);
	for (i = 0; i < m; i++)
		scanf("%d", &height[i]);
	for (i = 0; i < m; i++)
	{
		for (j = i + 1; j <= i + k && j < m; j++)
		{
			if (abs(height[j] - height[i]) <= h)
			{
				sum += 1;
			}
		}
	}
	printf("%lld", sum);
	return 0;
}
